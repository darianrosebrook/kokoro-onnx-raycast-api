{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-kokoro-tts",
  "title": "Raycast Kokoro Tts",
  "description": "Text-to-Speech using Kokoro ONNX with word highlighting",
  "icon": "icon.png",
  "author": "darianrosebrook",
  "categories": [
    "Productivity",
    "Media"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "speak-text",
      "title": "Speak Text",
      "description": "Simple text-to-speech form using processor",
      "mode": "view"
    },
    {
      "name": "speak-selection",
      "title": "Speak Selected Text",
      "description": "Speak currently selected text",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "voice",
      "title": "Voice",
      "description": "Select the voice for text-to-speech",
      "type": "dropdown",
      "required": false,
      "default": "bm_fable",
      "data": [
        {
          "title": "BM Fable ( Grade C)",
          "value": "bm_fable"
        },
        {
          "title": "AF Bella ( Grade A-)",
          "value": "af_bella"
        },
        {
          "title": "AF Heart (❤️)",
          "value": "af_heart"
        },
        {
          "title": "AF Nicole ( Grade B-)",
          "value": "af_nicole"
        },
        {
          "title": "AM Michael ( Grade C+)",
          "value": "am_michael"
        },
        {
          "title": "AM Fenrir ( Grade C+)",
          "value": "am_fenrir"
        },
        {
          "title": "AM Puck ( Grade C+)",
          "value": "am_puck"
        },
        {
          "title": "AF Aoede ( Grade C+)",
          "value": "af_aoede"
        },
        {
          "title": "AF Kore ( Grade C+)",
          "value": "af_kore"
        },
        {
          "title": "AF Sarah ( Grade C+)",
          "value": "af_sarah"
        }
      ]
    },
    {
      "name": "speed",
      "title": "Speech Speed",
      "description": "Adjust the speech speed (0.5 - 2.0)",
      "type": "textfield",
      "required": false,
      "default": "1.0",
      "placeholder": "1.0"
    },
    {
      "name": "serverUrl",
      "title": "Server URL",
      "description": "Kokoro TTS server URL",
      "type": "textfield",
      "required": false,
      "default": "http://localhost:8000",
      "placeholder": "http://localhost:8000"
    },
    {
      "name": "useStreaming",
      "title": "Use Streaming",
      "description": "Enable streaming mode for real-time audio processing",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Enable streaming mode"
    },
    {
      "name": "sentencePauses",
      "title": "Sentence Pauses",
      "description": "Add natural pauses between sentences for better speech flow",
      "type": "checkbox",
      "required": false,
      "default": true,
      "label": "Add pauses between sentences"
    },
    {
      "name": "maxSentenceLength",
      "title": "Max Sentence Length",
      "description": "Maximum characters per sentence (0 = no limit)",
      "type": "textfield",
      "required": false,
      "default": "0",
      "placeholder": "0"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.95.0",
    "@raycast/utils": "^1.19.1",
    "fast-deep-equal": "^3.1.3",
    "lru-cache": "^11.0.1",
    "speaker": "^0.5.5",
    "undici": "^6.21.0",
    "wav-decoder": "^1.3.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.2.1",
    "@types/react": "^19.0.12",
    "eslint": "^9.22.0",
    "globals": "^16.3.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "dev:debug": "KOKORO_DEBUG=true ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest",
    "test:integration": "node --loader ts-node/esm test-tts-integration.ts",
    "publish": "npx @raycast/api@latest publish"
  }
}
