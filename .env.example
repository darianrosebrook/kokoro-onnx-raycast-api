# Kokoro TTS Backend Configuration Template
# Copy this to .env and configure your settings

# Core API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=true

# Model Configuration
MODEL_PROVIDER=coreml  # options: ort, coreml
MODEL_PRECISION=fp16   # options: fp32, fp16, int8
ENABLE_CACHING=true

# Performance Tuning
MAX_WORKERS=4
CACHE_SIZE_MB=512
WARMUP_ENABLED=true

# Audio Settings
SAMPLE_RATE=24000
BUFFER_SIZE=1024

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
BENCHMARK_MODE=false

# Development
RELOAD=true
PROFILING_ENABLED=false

# Security
SECRET_KEY=your-secret-key-here
